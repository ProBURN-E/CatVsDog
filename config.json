{
    "name": "Cat_vs_Dog",
    "n_gpu": 1,

    "arch": {
        "type": "ResNet18SelfModel",
        "args": {
            "num_classes": 2
        }
    },
    "data_loader": {
        "type": "CatVsDogDataLoader",
        "args":{
            "data_dir": "E:/github/pytorch深度学习实验内容/datasets/train",
            "batch_size": 5,
            "shuffle": true,
            "validation_split": 0.2,
            "num_workers": 0
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 1e-3
        }
    },
    "loss": "cross_entropy_loss",
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 40,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
