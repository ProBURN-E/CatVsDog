{
    "name": "FaceEmotion",
    "n_gpu": 1,

    "arch": {
        "type": "Resnet18Model",
        "args": {
            "num_classes": 7
        }
    },
    "data_loader": {
        "type": "ImageFolderDataLoader",
        "args":{
            "data_dir": "E:\\XunLei\\images",
            "batch_size": 16,
            "shuffle": true,
            "validation_split": 0.2,
            "num_workers": 0
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 1e-3
        }
    },
    "loss": "cross_entropy_loss",
    "metrics": [
        "accuracy",
        "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 5,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 40,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
